@if (Model.DevolucionList != null && Model.DevolucionList.Any())
{
<table class="styled-table">
    <thead>
        <tr>
            <th>ID Cliente</th>
            <th>ID Préstamo</th>
            <th>Motivo</th>
            <th>ID Estado Regreso</th>
            <th>Fecha Prestamo</th>
            <th>Fecha de Devolucion</th>
            <th> </th>
            @*<th>Notas</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DevolucionList)
        {
            <tr>
                <td>@item.IdDevoluciones</td>
                <td>@item.IdPrestamo</td>
                <td>@item.Motivo</td>
                <td>@item.IdEstadoRegresoNavigation?.DescripcionEstado</td>
                <td>@item.IdPrestamoNavigation.FechaPrestamo</td>
                <td>@item.FechaDevolucion.ToShortDateString()</td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.IdDevoluciones" class="btn btn-primary">Edit</a>

                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p>No hay devoluciones registradas.</p>
}
