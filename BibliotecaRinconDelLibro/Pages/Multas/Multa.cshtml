@page
@model MultasModel
@{
    ViewData["Title"] = "Gestión de Multas";
}

<h1>Gestión de Multas</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Libro</th>
            <th>Tipo de Multa</th>
            <th>Monto</th>
            <th>Descripción</th>
            <th>Pagado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var multa in Model.Multas)
        {
            <tr>
                <td>@multa.IdMulta</td>
                <td>@multa.Cliente</td>
                <td>@multa.Libro</td>
                <td>@multa.TipoMulta</td>
                <td>@multa.Monto.ToString("C")</td>
                <td>@multa.Descripcion</td>
                <td>@(multa.Pagado ? "Sí" : "No")</td>
            </tr>
        }
    </tbody>
</table>
