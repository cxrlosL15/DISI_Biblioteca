@page
@model BibliotecaRinconDelLibro.Pages.Multas.CreateModel
@{
    ViewData["Title"] = "Registrar Multa";
}

<h1>Registrar Multa</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Multa.IdPrestamo"></label>
        <select asp-for="Multa.IdPrestamo" class="form-control" asp-items="Model.PrestamosList"></select>
    </div>
    <div class="form-group">
        <label asp-for="Multa.IdTipomulta"></label>
        <select asp-for="Multa.IdTipomulta" class="form-control" asp-items="Model.TiposMultaList"></select>
    </div>
    <div class="form-group">
        <label asp-for="Multa.Monto"></label>
        <input asp-for="Multa.Monto" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Multa.Descripcion"></label>
        <input asp-for="Multa.Descripcion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Multa.Pagado"></label>
        <input asp-for="Multa.Pagado" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>