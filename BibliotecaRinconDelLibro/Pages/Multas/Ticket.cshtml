@page "{id:int}"
@model BibliotecaRinconDelLibro.Pages.Multa.TicketModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Ticket de Multa</title>
    <style>
        body {
            font-family: Arial;
            margin: 40px;
        }

        .ticket {
            border: 1px solid #ccc;
            padding: 20px;
            width: 300px;
        }
    </style>
</head>
<body onload="window.print()">
    <div class="ticket">
        <h2>Biblioteca - Ticket de Multa</h2>
        <p><strong>Cliente:</strong> @Model.Multa.IdPrestamoNavigation?.IdClientesNavigation?.NombreCompleto</p>
        <p><strong>Tipo de Multa:</strong> @Model.Multa.IdTipomultaNavigation?.Descripcion</p>
        <p><strong>Monto:</strong> $@Model.Multa.Monto</p>
        <p><strong>Pagado:</strong> @(Model.Multa.Pagado == true ? "Sí" : "No")</p>
        <p><em>Gracias por su visita</em></p>
    </div>
</body>
</html> 